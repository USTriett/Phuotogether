<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".gui_layer.manual.ManualItemFragment"
    style="@style/Base.Theme.Phuotogether">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp">
        <TextView
            android:id="@+id/fragmentManualItemEditCancelView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Hủy"
            android:textSize="18dp"
            android:textStyle="bold">
        </TextView>
        <TextView
            android:id="@+id/fragmentManualItemEditSaveView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Lưu"
            android:textSize="18dp"
            android:textStyle="bold">
        </TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <EditText
        android:id="@+id/fragmentManualItemEditTitleView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginHorizontal="16dp"
        android:textSize="24dp"
        android:textStyle="bold"
        android:gravity="top|left"/>
    <EditText
        android:id="@+id/fragmentManualItemEditContentView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:layout_marginBottom="32dp"
        android:layout_marginHorizontal="16dp"
        android:textSize="18dp"
        android:gravity="top|left"/>

</LinearLayout>