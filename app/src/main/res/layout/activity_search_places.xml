<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gui_layer.trip.destinationList.SearchDestinationActivity"
    android:orientation="vertical"
    android:background="@color/white"
    android:id="@+id/fragment_container1">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thêm địa điểm"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:textSize="20sp">
    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp">
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_back_ios"
            android:backgroundTint="@android:color/transparent"
            android:layout_gravity="center">

        </ImageButton>
        <AutoCompleteTextView
            android:id="@+id/autocomplete_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:textSize="15sp"
            android:textColor="#000"
            android:background="@drawable/search_view_background"
            android:hint="Tìm kiếm địa điểm"
            android:padding="10dp"
            android:imeOptions="actionSearch"
            android:inputType="text" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvPopularPlaces"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Địa điểm phổ biến"
        android:layout_margin="10dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rvPopularPlaces"
        android:layout_margin="10dp">
    </androidx.recyclerview.widget.RecyclerView>



</LinearLayout>
</RelativeLayout>