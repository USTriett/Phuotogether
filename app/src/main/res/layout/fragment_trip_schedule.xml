<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/tripschedule"
    tools:context=".gui_layer.trip.tripView.TripScheduleFragment"
    android:background="@color/colorSurface">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <AutoCompleteTextView
                android:id="@+id/autocomplete_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textSize="15sp"
                android:background="@drawable/search_view_background"
                android:hint="Tìm kiếm địa điểm"
                android:padding="15dp"
                android:imeOptions="actionSearch"
                android:inputType="text" />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rvPopularPlaces"
                android:layout_margin="10dp">
            </androidx.recyclerview.widget.RecyclerView>
        <TextView
            android:id="@+id/noDestination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Bạn chưa có điểm đến nào trong lịch trình" />
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/rvDestinationList"
                android:layout_margin="10dp"/>
        </LinearLayout>


    </FrameLayout>



    </RelativeLayout>


