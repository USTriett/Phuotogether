<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".gui_layer.manual.ManualItemFragment"
    style="@style/Base.Theme.Phuotogether">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:layout_marginHorizontal="16dp">
        <TextView
            android:id="@+id/fragmentManualItemReadCancelView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Trở về"
            android:textSize="18dp"
            android:textStyle="bold">
        </TextView>
        <TextView
            android:id="@+id/fragmentManualItemReadEditView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Chỉnh sửa"
            android:textSize="18dp"
            android:textStyle="bold">
        </TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/fragmentManualItemReadContentView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:layout_marginBottom="32dp"
        android:layout_marginHorizontal="16dp"
        android:layout_gravity="center"
        android:textSize="16dp"/>

</LinearLayout>