<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_back_ios"
        android:background="@drawable/transparent_background"
        android:paddingLeft="12dp"
        android:paddingRight="6dp"
        android:paddingBottom="6dp"
        android:paddingTop="10dp"
        android:id="@+id/buttonBackSignup">
    </ImageButton>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ĐĂNG KÝ"
        android:textStyle="bold"
        android:textSize="25dp"
        android:gravity="center"
        android:layout_marginTop="20dp">
    </TextView>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_border_background"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:hint="Email hoặc SĐT"
        android:textSize="16dp"
        android:paddingLeft="12dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingRight="12dp"
        android:layout_marginTop="30dp"
        android:id="@+id/editTextEmailSignup">
    </EditText>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vui lòng điền Email hoặc SĐT"
        android:paddingLeft="20dp"
        android:textColor="#FF0000"
        android:layout_marginTop="3dp"
        android:visibility="gone"
        android:id="@+id/tvEmptyEmailNotificationSignup">
    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email và SĐT không hợp lệ"
        android:paddingLeft="20dp"
        android:textColor="#FF0000"
        android:layout_marginTop="3dp"
        android:visibility="gone"
        android:id="@+id/tvInvalidEmailNotificationSignup">
    </TextView>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_border_background"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:hint="Mật khẩu"
        android:textSize="16dp"
        android:inputType="textPassword"
        android:paddingLeft="12dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingRight="12dp"
        android:id="@+id/editTextPasswordSignup"
        android:layout_marginTop="30dp">
    </EditText>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vui lòng điền mật khẩu"
        android:paddingLeft="20dp"
        android:textColor="#FF0000"
        android:layout_marginTop="3dp"
        android:visibility="gone"
        android:id="@+id/tvEmptyPasswordNotificationSignup">
    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mật khẩu phải từ 8 ký tự trở lên, bao gồm cả chứ cái in hoa và ký tự đặc biệt"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textColor="#FF0000"
        android:layout_marginTop="3dp"
        android:visibility="gone"
        android:id="@+id/tvInvalidPasswordNotificationSignup">
    </TextView>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_border_background"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:hint="Xác nhận lại mật khẩu"
        android:textSize="16dp"
        android:inputType="textPassword"
        android:paddingLeft="12dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingRight="12dp"
        android:id="@+id/editTextConfirmPasswordSignup"
        android:layout_marginTop="30dp">
    </EditText>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vui lòng xác nhận lại mật khẩu"
        android:paddingLeft="20dp"
        android:textColor="#FF0000"
        android:layout_marginTop="3dp"
        android:visibility="gone"
        android:id="@+id/tvEmptyConfirmPasswordNotificationSignup">
    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mật khẩu không khớp"
        android:paddingLeft="20dp"
        android:textColor="#FF0000"
        android:layout_marginTop="3dp"
        android:visibility="gone"
        android:id="@+id/tvWrongConfirmPasswordNotificationSignup">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp">
        <CheckBox
            android:id="@+id/myCheckBoxSignup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đồng ý với"
            android:checked="false">
        </CheckBox>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Điều khoản và dịch vụ"
            android:textSize="16dp"
            android:textColor="#00ABF2"
            android:id="@+id/tvPrivacyPolicySignup">
        </TextView>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vui lòng đọc và xác nhận các điều khoản"
        android:paddingLeft="20dp"
        android:textColor="#FF0000"
        android:visibility="gone"
        android:id="@+id/tvNoneCheckNotificationSignup">
    </TextView>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_fill_green_background"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="25dp"
        android:text="Đăng ký"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:id="@+id/buttonSignUpSignup">

    </androidx.appcompat.widget.AppCompatButton>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bạn đã có tài khoản?">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Đăng nhập"
            android:textSize="16dp"
            android:textColor="#00ABF2"
            android:clickable="true"
            android:id="@+id/tvLoginNavSignup">

        </TextView>
    </LinearLayout>
</LinearLayout>