<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".gui_layer.MainActivity"
    android:id="@+id/fullOptionsFragment">

    <!-- TODO: Update blank fragment layout -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/backgroundInfo"
                android:layout_width="match_parent"
                android:layout_height="105dp"
                android:background="#bcea97"
                android:contentDescription="TODO" />
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                >
                <androidx.cardview.widget.CardView
                    android:layout_marginTop="50dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="250dp"
                    app:cardBackgroundColor="@color/white">

                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:cardCornerRadius="250dp"
                        android:layout_gravity="center">

                        <ImageView
                            android:id="@+id/avatarUser"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_alignTop="@+id/backgroundInfo"
                            android:src="@drawable/heart_svgrepo_com"
                            />

                    </androidx.cardview.widget.CardView>

                </androidx.cardview.widget.CardView>


            </LinearLayout>


        </RelativeLayout>

        <TextView
            android:id="@+id/usernameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LTMP"
            android:textAlignment="center"
            android:textSize="44sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp">
            <Button
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Edit Profile"
                android:id="@+id/editInfoBtn"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Content"
                android:layout_marginLeft="30dp"
                android:textSize="20sp"
                android:paddingVertical="4dp"
                android:textStyle="bold"/>
            <androidx.cardview.widget.CardView
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="30dp"
                android:layout_marginBottom="4dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="15dp"
                style="@style/ManualItemCardView">
                <TextView
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/heart_svgrepo_com"
                    android:drawableEnd="@drawable/right_arrow_svgrepo_com"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:text="Images"
                    android:textSize="22sp"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Options"
                android:layout_marginLeft="30dp"
                android:textSize="20sp"
                android:paddingVertical="4dp"
                android:textStyle="bold"/>
            <androidx.cardview.widget.CardView
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="30dp"
                android:layout_marginBottom="4dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="15dp"
                style="@style/ManualItemCardView">
                <TextView
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/logout_2_svgrepo_com"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:text="Logout"
                    android:textSize="22sp"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

</LinearLayout>