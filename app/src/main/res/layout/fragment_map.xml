<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Base.Theme.Phuotogether">

    <include
        android:id="@+id/bottom_sheet_location_info"
        layout="@layout/bottom_sheet_location_info"
        />
    <include
        android:id="@+id/bottom_sheet"
        layout="@layout/bottom_sheet_route"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relativeLayoutMap">

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".gui_layer.MainActivity" />

        <LinearLayout
            android:id="@+id/direction_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:visibility="gone"
            >

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="20dp"
                    style="@style/TopBar">

                    <ImageView
                        android:id="@+id/backView"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/arrow_back_ios"
                        style="@style/MyVectorImageStyle"
                        />

                    <TextView
                        android:id="@+id/txtStartLbl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@+id/backView"
                        android:text="From"
                        android:textStyle="bold" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txtStartLocation"
                        style="@style/editTextLayoutStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtStartLbl"
                        android:layout_alignStart="@+id/txtStartLbl"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="asdgahsyd"
                        android:textStyle="bold" />
                    <View
                        android:id="@+id/view"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/txtStartLocation"
                        android:layout_alignStart="@+id/txtStartLocation" />

                    <ImageView
                        android:id="@+id/imgEndLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/view"
                        android:layout_marginTop="10dp"
                        app:tint="@color/quantum_googred500" />

                    <TextView
                        android:id="@+id/txtEndLbl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/view"
                        android:layout_alignStart="@+id/view"
                        android:layout_toEndOf="@+id/imgEndLocation"
                        android:text="To"
                        android:textStyle="bold" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txtEndLocation"
                        style="@style/editTextLayoutStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtEndLbl"
                        android:layout_alignStart="@+id/txtEndLbl"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="asdgahsyd"
                        android:textStyle="bold" />

                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>


            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:scrollbars="none">

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/travelMode"
                    style="@style/CustomChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:checkedChip="@+id/btnChipDriving"
                    app:selectionRequired="true"
                    app:singleLine="true"
                    app:singleSelection="true">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/btnChipDriving"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checkable="true"
                        android:text="Driving"
                        app:checkedIconEnabled="true" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/btnChipWalking"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checkable="true"
                        android:text="Walking"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/btnChipBike"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checkable="true"
                        android:text="Bike"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/btnChipTrain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checkable="true"
                        android:text="Transit" />


                </com.google.android.material.chip.ChipGroup>


            </HorizontalScrollView>


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:elevation="10dp"
            android:id="@+id/relLayout1"
            style="@style/TopBar">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="30dp"
                android:id="@+id/ic_magnify"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/location_logo"/>
            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/input_search"
                android:src="@drawable/baseline_arrow_back_ios_new_24"
                android:background="@drawable/transparent_background"
                style="@style/MyVectorImageStyle"
                android:visibility="gone" />
            <AutoCompleteTextView
                android:layout_width="280dp"
                android:layout_height="match_parent"
                android:layout_alignWithParentIfMissing="true"
                android:layout_toRightOf="@+id/ic_magnify"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:textSize="15sp"
                android:id="@+id/input_search"
                android:background="@null"
                android:hint="Enter Address, City or Zip Code"
                android:imeOptions="actionSearch"
                android:inputType="text"
                />
            <ImageButton
                android:id="@+id/btn_profile"
                android:paddingEnd="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/transparent_background"
                style="@style/MyVectorImageStyle"
                android:src="@drawable/baseline_person_pin_24" />

            <ImageButton
                android:id="@+id/btn_delete"
                android:paddingEnd="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/outline_cancel_24"
                android:background="@drawable/transparent_background"
                style="@style/MyVectorImageStyle"
                android:visibility="gone" />
        </RelativeLayout>

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/relLayout1"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:scrollbars="none">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/placesGroup"
                style="@style/CustomChip"
                app:chipMinTouchTargetSize="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleLine="true"
                android:elevation="5dp"
                app:chipCornerRadius="20dp"
                app:singleSelection="true" />

        </HorizontalScrollView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/placesRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="26dp"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    </RelativeLayout>
    <!-- Floating CardView with TextView -->
    <androidx.cardview.widget.CardView
        android:id="@+id/floating_instruction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_margin="16dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#013220">
        <TextView
            android:id="@+id/floating_instruction_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Instruction Text"
            android:textStyle="bold"
            android:textSize="24dp" />
    </androidx.cardview.widget.CardView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_my_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/horizontalScrollView"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:layout_gravity="center|end"
        app:backgroundTint="@color/colorPrimaryFixedDim"
        style="@style/MyVectorImageStyle"
        app:maxImageSize="30dp"
        app:shapeAppearance="@style/Widget.Material3.FloatingActionButton.Surface"
        app:srcCompat="@drawable/baseline_my_location_24">

    </com.google.android.material.floatingactionbutton.FloatingActionButton>


</androidx.coordinatorlayout.widget.CoordinatorLayout>

