<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Phuotogether" parent="Theme.Material3.Dark.NoActionBar">
        <item name="android:windowBackground">@color/colorSurfaceDark</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorPrimary">@color/colorPrimaryFixedDim</item>
        <item name="colorPrimaryFixed">@color/colorPrimaryFixedDim</item>
    </style>

    <!-- Navigation bar -->
    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/colorSecondaryFixedDim</item>
    </style>
    <style name="BottomNavigation" parent="Theme.Material3.Dark.NoActionBar">
        <item name="itemTextColor">@color/colorOnSurfaceContainerDark</item>
<!--        <item name="itemIconTint">@color/colorOnSurfaceContainerDark</item>-->
        <item name="itemActiveIndicatorStyle">@style/App.Custom.Indicator</item>
<!--        <item name="itemBackground">@color/colorSurfaceContainerDark</item>-->
    </style>

    <!-- Color of vector images -->
    <style name="MyVectorImageStyle" parent="Theme.Material3.Dark.NoActionBar">
        <item name="android:tint">@color/colorOnSurfaceContainerDark</item>
    </style>

    <!-- Top bar -->
    <style name="TopBar" parent="Theme.Material3.Dark.NoActionBar">
        <item name="android:background">@drawable/search_view_background_dark</item>
        <item name="android:textColor">@color/colorOnSurfaceContainerDark</item>
    </style>

    <!-- Chips -->
    <style name="CustomChip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipCornerRadius">20dp</item>
        <item name="android:tint">@color/colorSurfaceContainerDark</item>
        <item name="android:textColor">@color/colorOnSurfaceContainerDark</item>
        <item name="chipStrokeWidth">0dp</item>
    </style>
</resources>

