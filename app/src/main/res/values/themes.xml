<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="Base.Theme.Phuotogether" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:windowBackground">@color/colorSurface</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryFixed">@color/colorPrimaryFixedDim</item>
    </style>

    <!-- Navigation bar -->
    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/colorSecondaryFixedDim</item>
    </style>
    <style name="BottomNavigation" parent="Theme.Material3.Light.NoActionBar">
        <item name="itemTextColor">@color/colorOnSurfaceContainer</item>
        <item name="itemIconTint">@color/colorOnSurfaceContainer</item>
        <item name="itemActiveIndicatorStyle">@style/App.Custom.Indicator</item>
        <item name="itemBackground">@color/colorSurfaceContainer</item>
    </style>

    <!-- Color of vector images -->
    <style name="MyVectorImageStyle" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:tint">@color/colorOnSurfaceContainer</item>
    </style>

    <!-- Top bar -->
    <style name="TopBar" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:background">@drawable/search_view_background</item>
        <item name="android:textColor">@color/colorOnSurfaceContainer</item>
    </style>

    <!-- Chips -->
    <style name="CustomChip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipCornerRadius">20dp</item>
        <item name="android:tint">@color/colorSurfaceContainer</item>
        <item name="android:textColor">@color/colorOnSurfaceContainer</item>
        <item name="chipStrokeWidth">0dp</item>
    </style>


    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/AppBottomSheetDialogAnimation</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">     @android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
    </style>

    <style name="AppBottomSheetDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="ProfileDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="cornerRadius">10dp</item>
    </style>
    <style name="editTextLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:background">@drawable/search_view_background</item>
    </style>

    <style name="Theme.Phuotogether" parent="Base.Theme.Phuotogether" />
</resources>